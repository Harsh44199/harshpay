<%- include('../partials/header') %>

<div class="dashboard-container">
    <div class="dashboard-header">
        <h1><i class="fas fa-crown"></i> Admin Dashboard</h1>
    </div>

    <% if (error) { %>
        <div class="alert alert-error">
            <i class="fas fa-exclamation-triangle"></i>
            <%= error %>
        </div>
    <% } %>
    <% if (success) { %>
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i>
            <%= success %>
        </div>
    <% } %>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-info">
                <h3>Total Users</h3>
                <p class="stat-value"><%= stats.totalUsers || 0 %></p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-wallet"></i>
            </div>
            <div class="stat-info">
                <h3>Total Platform Balance</h3>
                <p class="stat-value">₹<%= parseFloat(stats.totalBalance || 0).toFixed(2) %></p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-exchange-alt"></i>
            </div>
            <div class="stat-info">
                <h3>Recent Transactions</h3>
                <p class="stat-value"><%= transactions.length %></p>
            </div>
        </div>
    </div>

    <div class="action-buttons">
        <a href="/admin/add-money" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i>
            Add Money to User
        </a>
    </div>

    <div class="admin-section">
    <h2><i class="fas fa-users-cog"></i> All Users</h2>
    <div class="table-responsive">
        <table class="admin-table">
            <thead>
                <tr>
                    <th><i class="fas fa-hashtag"></i> ID</th>
                    <th><i class="fas fa-user"></i> Name</th>
                    <th><i class="fas fa-envelope"></i> Email</th>
                    <th><i class="fas fa-phone"></i> Phone</th>
                    <th><i class="fas fa-wallet"></i> Balance</th>
                    <th><i class="fas fa-user-tag"></i> Role</th>
                    <th><i class="fas fa-toggle-on"></i> Status</th>
                    <th><i class="far fa-calendar"></i> Joined</th>
                    <th><i class="fas fa-cog"></i> Actions</th> <!-- NEW COLUMN -->
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(u) { %>
                    <tr>
                        <td>#<%= u.id %></td>
                        <td><%= u.full_name %></td>
                        <td><%= u.email %></td>
                        <td><%= u.phone || 'N/A' %></td>
                        <td class="amount-credit">₹<%= parseFloat(u.balance).toFixed(2) %></td>
                        <td>
                            <span class="badge <%= u.is_admin ? 'badge-admin' : 'badge-user' %>">
                                <i class="fas fa-<%= u.is_admin ? 'crown' : 'user' %>"></i>
                                <%= u.is_admin ? 'Admin' : 'User' %>
                            </span>
                        </td>
                        <td>
                            <span class="badge <%= u.is_active ? 'badge-success' : 'badge-error' %>">
                                <i class="fas fa-<%= u.is_active ? 'check' : 'times' %>"></i>
                                <%= u.is_active ? 'Active' : 'Inactive' %>
                            </span>
                        </td>
                        <td><%= new Date(u.created_at).toLocaleDateString() %></td>
                        <td> <!-- NEW ACTIONS COLUMN -->
                            <% if (!u.is_admin) { %>
                                <form action="/admin/delete-user" 
                                      method="POST" 
                                      style="display: inline;" 
                                      onsubmit="return confirmDelete('<%= u.full_name %>', '<%= u.email %>', <%= u.balance %>)">
                                    <input type="hidden" name="user_id" value="<%= u.id %>">
                                    <button type="submit" class="btn-small btn-danger" title="Delete User">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            <% } else { %>
                                <span class="text-muted">
                                    <i class="fas fa-shield-alt"></i> Protected
                                </span>
                            <% } %>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>

<script>
function confirmDelete(name, email, balance) {
    if (balance > 0) {
        alert('Cannot delete user with balance ₹' + balance.toFixed(2) + '. User must transfer funds first.');
        return false;
    }
    
    var message = '⚠️ WARNING: Permanently delete this user?\n\n';
    message += 'Name: ' + name + '\n';
    message += 'Email: ' + email + '\n\n';
    message += 'This action CANNOT be undone!\n\n';
    message += 'Are you absolutely sure?';
    
    return confirm(message);
}
</script>

    <div class="admin-section">
        <h2><i class="fas fa-history"></i> Recent Transactions</h2>
        <div class="transaction-list">
            <% if (transactions && transactions.length > 0) { %>
                <% transactions.forEach(transaction => { %>
                    <div class="transaction-item">
                        <div class="transaction-icon">
                            <i class="fas fa-<%= transaction.transaction_type === 'admin_credit' ? 'plus-circle' : 'exchange-alt' %>"></i>
                        </div>
                        <div class="transaction-details">
                            <p class="transaction-user">
                                <% if (transaction.transaction_type === 'admin_credit') { %>
                                    <i class="fas fa-crown"></i> Admin → <%= transaction.receiver_name %>
                                <% } else { %>
                                    <%= transaction.sender_name %> → <%= transaction.receiver_name %>
                                <% } %>
                            </p>
                            <p class="transaction-desc">
                                <i class="fas fa-comment"></i>
                                <%= transaction.description %>
                            </p>
                            <p class="transaction-date">
                                <i class="far fa-clock"></i>
                                <%= new Date(transaction.created_at).toLocaleString() %>
                            </p>
                        </div>
                        <div class="transaction-amount credit">
                            ₹<%= parseFloat(transaction.amount).toFixed(2) %>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="no-data">
                    <i class="fas fa-inbox"></i>
                    No transactions yet
                </p>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>