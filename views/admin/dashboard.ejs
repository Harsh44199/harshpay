<%- include('../partials/header') %>

<div class="dashboard-container">
    <div class="dashboard-header">
        <h1><i class="fas fa-crown"></i> Admin Dashboard</h1>
    </div>

    <% if (error) { %>
        <div class="alert alert-error">
            <i class="fas fa-exclamation-triangle"></i>
            <%= error %>
        </div>
    <% } %>
    <% if (success) { %>
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i>
            <%= success %>
        </div>
    <% } %>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-info">
                <h3>Total Users</h3>
                <p class="stat-value"><%= stats.totalUsers || 0 %></p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-wallet"></i>
            </div>
            <div class="stat-info">
                <h3>Total Platform Balance</h3>
                <p class="stat-value">₹<%= parseFloat(stats.totalBalance || 0).toFixed(2) %></p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-exchange-alt"></i>
            </div>
            <div class="stat-info">
                <h3>Recent Transactions</h3>
                <p class="stat-value"><%= transactions.length %></p>
            </div>
        </div>
    </div>

    <div class="action-buttons">
        <a href="/admin/add-money" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i>
            Add Money to User
        </a>
    </div>

    <div class="admin-section">
        <h2><i class="fas fa-users-cog"></i> All Users</h2>
        <div class="table-responsive">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th><i class="fas fa-hashtag"></i> ID</th>
                        <th><i class="fas fa-user"></i> Name</th>
                        <th><i class="fas fa-envelope"></i> Email</th>
                        <th><i class="fas fa-phone"></i> Phone</th>
                        <th><i class="fas fa-wallet"></i> Balance</th>
                        <th><i class="fas fa-user-tag"></i> Role</th>
                        <th><i class="fas fa-toggle-on"></i> Status</th>
                        <th><i class="far fa-calendar"></i> Joined</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td>#<%= user.id %></td>
                            <td><%= user.full_name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.phone || 'N/A' %></td>
                            <td class="amount-credit">₹<%= parseFloat(user.balance).toFixed(2) %></td>
                            <td>
                                <span class="badge <%= user.is_admin ? 'badge-admin' : 'badge-user' %>">
                                    <i class="fas fa-<%= user.is_admin ? 'crown' : 'user' %>"></i>
                                    <%= user.is_admin ? 'Admin' : 'User' %>
                                </span>
                            </td>
                            <td>
                                <span class="badge <%= user.is_active ? 'badge-success' : 'badge-error' %>">
                                    <i class="fas fa-<%= user.is_active ? 'check' : 'times' %>"></i>
                                    <%= user.is_active ? 'Active' : 'Inactive' %>
                                </span>
                            </td>
                            <td><%= new Date(user.created_at).toLocaleDateString() %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <div class="admin-section">
        <h2><i class="fas fa-history"></i> Recent Transactions</h2>
        <div class="transaction-list">
            <% if (transactions && transactions.length > 0) { %>
                <% transactions.forEach(transaction => { %>
                    <div class="transaction-item">
                        <div class="transaction-icon">
                            <i class="fas fa-<%= transaction.transaction_type === 'admin_credit' ? 'plus-circle' : 'exchange-alt' %>"></i>
                        </div>
                        <div class="transaction-details">
                            <p class="transaction-user">
                                <% if (transaction.transaction_type === 'admin_credit') { %>
                                    <i class="fas fa-crown"></i> Admin → <%= transaction.receiver_name %>
                                <% } else { %>
                                    <%= transaction.sender_name %> → <%= transaction.receiver_name %>
                                <% } %>
                            </p>
                            <p class="transaction-desc">
                                <i class="fas fa-comment"></i>
                                <%= transaction.description %>
                            </p>
                            <p class="transaction-date">
                                <i class="far fa-clock"></i>
                                <%= new Date(transaction.created_at).toLocaleString() %>
                            </p>
                        </div>
                        <div class="transaction-amount credit">
                            ₹<%= parseFloat(transaction.amount).toFixed(2) %>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="no-data">
                    <i class="fas fa-inbox"></i>
                    No transactions yet
                </p>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>