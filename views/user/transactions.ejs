<%- include('../partials/header') %>

<div class="page-container">
    <div class="page-header">
        <h1><i class="fas fa-receipt"></i> Transaction History</h1>
        <p><i class="fas fa-list"></i> All your transactions in one place</p>
    </div>

    <% if (error) { %>
        <div class="alert alert-error">
            <i class="fas fa-exclamation-triangle"></i>
            <%= error %>
        </div>
    <% } %>

    <% if (transactions && transactions.length > 0) { %>
        <div class="transaction-table">
            <table>
                <thead>
                    <tr>
                        <th><i class="far fa-calendar"></i> Date & Time</th>
                        <th><i class="fas fa-tag"></i> Type</th>
                        <th><i class="fas fa-user"></i> From/To</th>
                        <th><i class="fas fa-comment"></i> Description</th>
                        <th><i class="fas fa-rupee-sign"></i> Amount</th>
                        <th><i class="fas fa-info-circle"></i> Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% transactions.forEach(transaction => { %>
                        <tr>
                            <td><%= new Date(transaction.created_at).toLocaleString() %></td>
                            <td>
                                <span class="badge <%= transaction.sender_id === user.id ? 'badge-sent' : 'badge-received' %>">
                                    <i class="fas fa-<%= transaction.sender_id === user.id ? 'arrow-up' : 'arrow-down' %>"></i>
                                    <%= transaction.sender_id === user.id ? 'Sent' : 'Received' %>
                                </span>
                            </td>
                            <td>
                                <% if (transaction.sender_id === user.id) { %>
                                    <%= transaction.receiver_name %><br>
                                    <small><%= transaction.receiver_email %></small>
                                <% } else { %>
                                    <%= transaction.sender_name || 'HarshPay Admin' %><br>
                                    <small><%= transaction.sender_email || 'system@harshpay.com' %></small>
                                <% } %>
                            </td>
                            <td><%= transaction.description %></td>
                            <td class="<%= transaction.sender_id === user.id ? 'amount-debit' : 'amount-credit' %>">
                                <%= transaction.sender_id === user.id ? '-' : '+' %>â‚¹<%= parseFloat(transaction.amount).toFixed(2) %>
                            </td>
                            <td>
                                <span class="badge badge-success">
                                    <i class="fas fa-check"></i>
                                    <%= transaction.status %>
                                </span>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="empty-state">
            <p>
                <i class="fas fa-inbox"></i>
                No transactions yet
            </p>
            <a href="/send-money" class="btn btn-primary">
                <i class="fas fa-paper-plane"></i>
                Send Money
            </a>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>